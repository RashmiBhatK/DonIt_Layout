<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_five_dp"
    app:cardElevation="@dimen/margin_five_dp"
    app:cardCornerRadius="@dimen/margin_five_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_ten_dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/details_of_donation"
            android:textColor="@color/stratos"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/stratos"
            android:layout_margin="@dimen/root_element_margin"
            android:text="Item "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:textSize="16sp"
            android:textColor="@color/sienna"
            android:layout_margin="@dimen/root_element_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/stratos"
            android:layout_margin="@dimen/root_element_margin"
            android:text="Item Type"/>

        <TextView
            android:id="@+id/item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/root_element_margin"
            android:textSize="16sp"
            android:textColor="@color/sienna"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/stratos"
            android:layout_margin="@dimen/root_element_margin"
            android:text="Donation Address"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/donation_address"
            android:textSize="16sp"
            android:textColor="@color/sienna"
            android:layout_margin="@dimen/root_element_margin"/>
        <ImageView
            android:id="@+id/donation_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/margin_five_dp"
            android:contentDescription="@string/delivery_image"
            android:scaleType="fitCenter" />
    </LinearLayout>


</android.support.v7.widget.CardView>

